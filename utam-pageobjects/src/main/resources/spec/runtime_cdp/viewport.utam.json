{
  "root": true,
  "selector": {
    "css": ".viewport"
  },
  "elements": [
    {
      "public": true,
      "type": [
        "draggable", "actionable"
      ],
      "name": "draggableAttribute",
      "selector": {
        "css": "[data-tid='name']"
      }
    },
    {
      "name": "segmentationCanvas",
      "public": true,
      "type" : [ "clickable"],
      "selector": {
        "css": "[data-tid=\"segment-canvas\"]"
      }
    }
  ],
  "methods" : [
    {
      "name" : "waitForAttributeWithText",
      "compose" : [
        {
          "apply" : "waitFor",
          "args" : [
            {
              "type" : "function",
              "predicate" : [
                {
                  "element" : "draggableAttribute",
                  "apply" : "getText",
                  "matcher" : {
                    "type" : "stringContains",
                    "args" : [
                      {
                        "name" : "foundText",
                        "type" : "string"
                      }
                    ]
                  }
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}